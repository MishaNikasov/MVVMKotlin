<?xml version="1.0" encoding="utf-8"?>
<ripple
    android:color="@color/dark_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/mask" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius_average"/>
        </shape>
    </item>

    <item android:id="@android:id/mask" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/corner_radius_average"/>
        </shape>
    </item>

</ripple>