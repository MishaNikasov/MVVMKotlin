<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context=".ui.fragment.RecipeListFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recipeViewModel"
            type="com.my.project.firstkotlin.viewmodel.MainRecipesViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_marginEnd="@dimen/big_margin"
                android:background="@drawable/search_rounded_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="@dimen/average_margin"
                    android:layout_marginStart="@dimen/average_margin"
                    android:layout_marginBottom="@dimen/average_margin"
                    android:layout_marginEnd="@dimen/average_margin"
                    android:src="@drawable/ic_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <EditText
                    android:layout_marginEnd="@dimen/average_margin"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:hint="Search"
                    android:textSize="@dimen/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <com.my.project.firstkotlin.common.AppTextView
                app:textType="bold"
                android:layout_marginStart="@dimen/big_margin"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginBottom="@dimen/big_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_title"
                android:text="Most popular recipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_horizontal_recipe"
                android:orientation="horizontal"
                android:id="@+id/popular_recipes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>