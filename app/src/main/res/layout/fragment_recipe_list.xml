<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context=".ui.fragment.RecipeListFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recipeViewModel"
            type="com.my.project.firstkotlin.viewmodel.RecipeListViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/basic_padding"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="25dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:hint="Search recipe"
                android:layout_marginStart="@dimen/basic_padding"
                android:background="@android:color/transparent"
                android:id="@+id/search_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <com.my.project.firstkotlin.common.AppTextView
            app:textType="bold"
            android:layout_marginStart="@dimen/basic_margin"
            android:layout_marginTop="@dimen/basic_margin"
            android:layout_marginBottom="@dimen/basic_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:text="Most popular recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_horizontal_recipe"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:id="@+id/hot_recipes_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_recipe"
                android:id="@+id/recipes_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ProgressBar
                android:visibility="gone"
                android:paddingBottom="@dimen/basic_margin"
                app:layout_constraintTop_toTopOf="@id/recipes_recycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="bottom"
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>



    </LinearLayout>
</layout>