<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchRecipeViewModel"
            type="com.my.project.firstkotlin.viewmodel.SearchRecipeViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.SearchRecipeFragment">

        <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/basic_padding"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="25dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:hint="Search recipe"
                android:layout_marginStart="@dimen/basic_padding"
                android:background="@android:color/transparent"
                android:id="@+id/search_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_vertical_recipe"
            android:scrollbars="vertical"
            android:id="@+id/recipes_recycler"/>

    </LinearLayout>


</layout>
