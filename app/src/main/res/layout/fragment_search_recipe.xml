<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchRecipeViewModel"
            type="com.my.project.firstkotlin.viewmodel.SearchRecipeViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.SearchRecipeFragment">

        <LinearLayout
            android:id="@+id/search_btn"
            android:layout_margin="@dimen/big_margin"
            android:background="@drawable/search_rounded_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="@dimen/average_margin"
                android:layout_marginStart="@dimen/average_margin"
                android:layout_marginBottom="@dimen/average_margin"
                android:layout_marginEnd="@dimen/average_margin"
                android:src="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/search_text"
                android:gravity="start|center"
                android:layout_marginEnd="@dimen/average_margin"
                android:layout_gravity="center"
                android:textColor="@color/text_gray"
                android:background="@android:color/transparent"
                android:hint="@string/search"
                android:textSize="@dimen/text_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_vertical_recipe"
            android:scrollbars="vertical"
            android:id="@+id/recipes_recycler"/>

    </LinearLayout>


</layout>
